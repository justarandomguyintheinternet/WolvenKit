                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                x:Name="RowIndexTextBlock"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="{Binding Name, Mode=OneTime}"
                                TextAlignment="Center"
                                ToolTip="{Binding XPath, Mode=OneTime}" />
                            <others:ConfirmButton
                                Grid.Column="2"
