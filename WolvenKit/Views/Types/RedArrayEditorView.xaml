                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Stretch"
                                ViewModel="{Binding}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>-->
        </ListView>
    </Grid>
</reactiveUi:ReactiveUserControl>
